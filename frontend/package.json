{
  "name": "saathi-tv-frontend",
  "version": "1.0.0",
  "description": "Frontend for Saathi TV - Random Video Chat Application",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=8080 --host=localhost --open=/",
    "build": "npm run minify:css && npm run minify:js",
    "dev": "live-server --port=8080 --host=localhost --open=/ --watch=css,js,index.html",
    "minify:css": "cleancss -o dist/styles.min.css css/styles.css",
    "minify:js": "terser js/main.js js/webrtc.js js/chat.js -o dist/app.min.js --compress --mangle",
    "lint": "eslint js/",
    "lint:fix": "eslint js/ --fix",
    "test": "jest",
    "validate:html": "html-validate index.html",
    "optimize:images": "imagemin assets/*.{jpg,png,svg} --out-dir=dist/assets",
    "pwa:validate": "pwa-asset-generator assets/logo.svg assets/ --manifest manifest.json",
    "lighthouse": "lighthouse http://localhost:8080 --output html --output-path ./reports/lighthouse.html",
    "serve:dist": "live-server dist/ --port=8080"
  },
  "keywords": [
    "video-chat",
    "webrtc",
    "pwa",
    "mobile-responsive",
    "random-chat",
    "frontend",
    "javascript",
    "html5",
    "css3"
  ],
  "author": "Saathi TV Team",
  "license": "MIT",
  "dependencies": {
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "clean-css-cli": "^5.6.2",
    "terser": "^5.19.2",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "html-validate": "^8.2.0",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "pwa-asset-generator": "^6.3.1",
    "lighthouse": "^10.4.0",
    "workbox-cli": "^7.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/saathi-tv/frontend.git"
  },
  "bugs": {
    "url": "https://github.com/saathi-tv/frontend/issues"
  },
  "homepage": "https://saathi-tv.com"
}
